<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.apple.bimancarry.MainActivity">

    <Button
        android:id="@+id/btn_chicken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnChicken"
        android:layout_weight="1"
        android:background="@drawable/chicken"


        />

    <Button
        android:id="@+id/btn_pizza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnPizza"
        android:layout_weight="1"
        android:layout_below="@id/btn_chicken"
        android:layout_alignParentStart="true"
        android:background="@drawable/pizza"/>

    <Button
        android:id="@+id/btn_hambuger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnHambuger"
        android:layout_weight="1"
        android:layout_below="@id/btn_pizza"
        android:layout_alignParentStart="true"
        android:background="@drawable/hambuger"/>




</LinearLayout>
